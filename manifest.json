{
	"name": "X-blocker",
	"description": "Blocks incoming things from the web.",
	"version": "1.6",

	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		"*://*/*"
	],
	"background": {
		"scripts": [ "xblocker.helpers.js", "xblocker.background.js" ]
	},
	"options_page": "options/options.html",
	"page_action": {
		"default_title": "X-blocker - Click to toggle & reload",
		"default_icon": {
			"128": "images/128x128.png"
		}
	},

	"icons": {
		"128": "images/128x128.png"
	},
	"manifest_version": 2
}
